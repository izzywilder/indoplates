        }

        // Event listeners
        document.getElementById('loginForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            
            try {
                const user = await login(email, password);
                showUserDashboard(user);
                closeModal('loginModal');
            } catch (error) {
                alert('Login gagal. Silakan coba lagi.');
            }
        });

        document.getElementById('registerForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const userData = {
                name: document.getElementById('registerName').value,
                email: document.getElementById('registerEmail').value,
                phone: document.getElementById('registerPhone').value,
                nik: document.getElementById('registerNIK').value,
                password: document.getElementById('registerPassword').value
            };
            
            try {
                const result = await register(userData);
                if (result.success) {
                    showUserDashboard(result.user);
                    closeModal('registerModal');
                }
            } catch (error) {
                alert('Registrasi gagal. Silakan coba lagi.');
            }
        });

        // Chatbot enter key functionality
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && e.target.id === 'chatInput') {
                sendChatMessage();
            }
        });

        // Close modal when clicking outside
        window.addEventListener('click', function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
            }
        });

        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Initialize
        switchLanguage('id');

        // Demo data update simulation
        setInterval(() => {
            const statNumbers = document.querySelectorAll('.stat-number');
            statNumbers.forEach(stat => {
                if (stat.textContent.includes(',')) {
                    const currentNum = parseInt(stat.textContent.replace(',', ''));
                    stat.textContent = (currentNum + Math.floor(Math.random() * 5)).toLocaleString();
                }
            });
        }, 30000);

        // Floating animation for plate preview
        setInterval(() => {
            if (platePreview) {
                platePreview.style.transform = `translateY(${Math.sin(Date.now() / 1000) * 3}px)`;
            }
        }, 50);

        // Auto-hide notifications
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: ${type === 'success' ? '#4CAF50' : type === 'error' ? '#f44336' : '#2196F3'};
                color: white;
                padding: 1rem 2rem;
                border-radius: 10px;
                box-shadow: 0 5px 15px rgba(0,0,0,0.3);
                z-index: 2000;
                animation: slideInRight 0.3s ease-out;
            `;
            notification.textContent = message;
            document.body.appendChild(notification);
            
            setTimeout(() => notification.remove(), 5000);
        }

        // Progressive Web App functionality
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('/sw.js').then(() => {
                console.log('PWA Service Worker registered');
            });
        }

        // Demo welcome notification for new users
        setTimeout(() => {
            if (!currentUser) {
                showNotification('üéâ Selamat datang di PlateKu! Platform #1 untuk plat nomor personal di Indonesia', 'success');
            }
        }, 2000);
    </script>
</body>
</html>
