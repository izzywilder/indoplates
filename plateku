        function activateVoice() {
            document.body.insertAdjacentHTML('beforeend', `
                <div class="voice-indicator" id="voiceIndicator" style="display: block;"></div>
            `);
            
            setTimeout(() => {
                alert('üé§ Voice Assistant Aktif\n\n"Halo! Saya PlateKu Assistant. Anda bisa bertanya:\n\n‚Ä¢ Status aplikasi saya\n‚Ä¢ Cara mengajukan plat nomor\n‚Ä¢ Informasi pembayaran\n‚Ä¢ Jadwal SAMSAT terdekat\n\nSilakan bicara sekarang..."');
                document.getElementById('voiceIndicator').remove();
            }, 3000);
        }

        // Chatbot Feature
        function openChatbot() {
            if (document.getElementById('chatbotPanel')) {
                document.getElementById('chatbotPanel').style.display = 'block';
                return;
            }
            
            document.body.insertAdjacentHTML('beforeend', `
                <div class="chatbot-panel" id="chatbotPanel" style="display: block;">
                    <div class="chatbot-header">
                        ü§ñ PlateKu Assistant
                        <span onclick="closeChatbot()" style="float: right; cursor: pointer;">&times;</span>
                    </div>
                    <div class="chatbot-messages" id="chatbotMessages">
                        <div style="background: #f0f0f0; padding: 0.5rem; border-radius: 10px; margin-bottom: 1rem;">
                            Halo! Saya PlateKu Assistant. Ada yang bisa saya bantu?
                        </div>
                    </div>
                    <div class="chatbot-input">
                        <input type="text" id="chatInput" placeholder="Ketik pesan...">
                        <button onclick="sendChatMessage()">Kirim</button>
                    </div>
                </div>
            `);
        }

        function closeChatbot() {
            document.getElementById('chatbotPanel').style.display = 'none';
        }

        function sendChatMessage() {
            const input = document.getElementById('chatInput');
            const messages = document.getElementById('chatbotMessages');
            const message = input.value;
            
            if (message.trim()) {
                messages.innerHTML += `<div style="text-align: right; margin-bottom: 0.5rem; background: #667eea; color: white; padding: 0.5rem; border-radius: 10px;">${message}</div>`;
                
                // Simulate AI response
                setTimeout(() => {
                    const responses = [
                        'Terima kasih atas pertanyaan Anda. Tim kami akan segera membantu.',
                        'Untuk informasi lebih lanjut, silakan hubungi customer service di +62 811-PLATEKU',
                        'Aplikasi Anda sedang diproses oleh SAMSAT. Estimasi 2-3 hari kerja.',
                        'Anda bisa melakukan pembayaran melalui GoPay, OVO, atau transfer bank.'
                    ];
                    const response = responses[Math.floor(Math.random() * responses.length)];
                    messages.innerHTML += `<div style="background: #f0f0f0; padding: 0.5rem; border-radius: 10px; margin-bottom: 1rem;">${response}</div>`;
                    messages.scrollTop = messages.scrollHeight;
                }, 1000);
                
                input.value = '';
                messages.scrollTop = messages.scrollHeight;
            }
        }

